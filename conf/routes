# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET           /                    controllers.Products.index()

GET           /products            controllers.Products.list(page: Integer ?= 0)
GET           /products/new        controllers.Products.newProduct()
GET           /product/:ean        controllers.Products.details(ean: models.Product)
POST          /products            controllers.Products.save()
DELETE        /product/:ean        controllers.Products.delete(ean: String)
GET           /picture/:ean        controllers.Products.picture(ean: String)
GET           /stockitems          controllers.StockItems.index()
GET           /reports             controllers.Reports.index()

# Map static resources from the /public folder to the /assets URL path
GET           /assets/*file        controllers.Assets.at(path="/public", file)
